# ArcShopper - Environment Variables
# Copy to .env and fill in your values

# Agent Private Keys (testnet only)
ORCHESTRATOR_PRIVATE_KEY=0x...
SEARCH_AGENT_PRIVATE_KEY=0x...
DATA_AGENT_PRIVATE_KEY=0x...
ANALYZER_AGENT_PRIVATE_KEY=0x...

# LLM API Keys
GROQ_API_KEY=gsk_...
OPENAI_API_KEY=sk-...

# Circle Programmable Wallets (get from console.circle.com)
CIRCLE_API_KEY=...
CIRCLE_ENTITY_SECRET=... # 32-byte hex string for wallet encryption

# Optional: Coinbase Commerce
COINBASE_COMMERCE_API_KEY=

# Arc Testnet (defaults)
ARC_RPC_URL=https://rpc.testnet.arc.network
ARC_CHAIN_ID=5042002
